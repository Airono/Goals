<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:background="@color/vk_white">

    <LinearLayout
        android:id="@+id/typeView"
        android:layout_width="56dp"
        android:layout_height="93dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:background="@color/colorPrimaryDark"
        tools:layout_conversion_absoluteHeight="93dp"
        tools:layout_conversion_absoluteWidth="10dp"
        tools:layout_conversion_absoluteX="0dp"
        tools:layout_conversion_absoluteY="0dp"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="0dp" >


        <TextView
            android:id="@+id/date"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="bottom"
            android:paddingBottom="5dp"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:text="Days"
            android:textAlignment="center"
            android:textColor="@color/vk_white"
            android:textStyle="bold"
            tools:layout_editor_absoluteX="-12dp"
            tools:layout_editor_absoluteY="38dp" />

    </LinearLayout>



    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="77dp"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/typeView"
        tools:layout_editor_absoluteX="10dp"
        tools:layout_editor_absoluteY="8dp">

        <TextView
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginEnd="30dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="5dp"
            android:fontFamily="sans-serif"
            android:text="@string/title"
            android:textAlignment="viewStart"
            android:textSize="20sp"
            android:textStyle="bold"
            android:typeface="serif" />

        <TextView
            android:id="@+id/description"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginBottom="0dp"
            android:layout_marginEnd="20dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="5dp"
            android:layout_weight="0.43"
            android:gravity="clip_vertical"
            android:lines="2"
            android:text="Description description description description description description description description description description description"
            android:textSize="14sp" />

    </LinearLayout>

</android.support.constraint.ConstraintLayout>