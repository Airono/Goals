<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">


    <View
        android:id="@+id/typeView"
        android:layout_width="15dp"
        android:layout_height="77dp"
        android:layout_weight="1"

        android:background="@color/colorPrimaryDark"
        tools:layout_conversion_absoluteHeight="93dp"
        tools:layout_conversion_absoluteWidth="10dp"
        tools:layout_conversion_absoluteX="0dp"
        tools:layout_conversion_absoluteY="0dp"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="0dp" />

    <RelativeLayout
        android:id="@+id/linearLayout"
        android:layout_width="353dp"
        android:layout_height="77dp"
        android:orientation="vertical"
        tools:layout_conversion_absoluteX="15dp"
        tools:layout_conversion_absoluteY="0dp"
        tools:layout_conversion_absoluteWidth="369dp"
        tools:layout_conversion_absoluteHeight="93dp"
        tools:layout_editor_absoluteY="8dp"
        tools:layout_editor_absoluteX="18dp"
        android:layout_marginStart="20dp">

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="5dp"
            android:text="@string/life"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="10dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="35dp"
            android:text="@string/life" />

        <TextView
            android:id="@+id/date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="10dp"
            android:layout_marginStart="240dp"
            android:layout_marginTop="50dp"
            android:text="@string/time" />

    </RelativeLayout>

</android.support.constraint.ConstraintLayout>